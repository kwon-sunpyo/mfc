void CPenAppDlg::OnMouseMove(UINT nFlags, CPoint point)
{
	if (nFlags == MK_LBUTTON) { // 마우스 왼쪽 클릭을 했을때
		CClientDC cd(this);
		CPen pen(PS_SOLID, 16, RGB(0, 255, 0)); // 글씨 크기를 16 폰트로 색을 초록색으로
		cd.SelectObject(&pen);
		cd.MoveTo(pnt);
		cd.LineTo(point);
	}
	else if (nFlags == MK_RBUTTON) {
		CClientDC cd(this);

	}

	pnt = point;

	CDialogEx::OnMouseMove(nFlags, point);
}
